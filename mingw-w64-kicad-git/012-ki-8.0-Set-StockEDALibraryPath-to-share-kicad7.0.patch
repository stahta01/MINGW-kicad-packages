+++ b/include/paths.h
@@ -241,6 +241,11 @@ private:
      * This retrieves that root for usage in other methods
      */
     static wxString getWindowsKiCadRoot();
+    /**
+     * Gets the root of the MSys2 install on Windows specifically.
+     * This retrieves that root for usage in other methods
+     */
+    static wxString getWindowsMSys2Root();
 #endif
 };
 
